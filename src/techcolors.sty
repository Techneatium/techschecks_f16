\definecolor{techred}{RGB}{218, 37, 29}
\definecolor{techyellow}{RGB}{248,195,0}
\definecolor{techgreen}{RGB}{0,146,63}
\definecolor{techblue}{RGB}{0,130,201}
\definecolor{techraspberry}{RGB}{162, 26, 104}
\definecolor{techorange}{RGB}{231, 120, 23}
\definecolor{techlime}{RGB}{139, 202, 152}

% defines highlight color for chapters
% principly used for circles with chapter number in header
\newcounter{colorcountercirc}
\newcommand{\chpcolorhighlight}{%
  \ifcase\value{colorcountercirc}%
    techyellow\or
    techgreen\or
    techblue\or
    techraspberry\or
    techorange\or
    techlime\else
    techred\fi
}

% defines text color to ensure text contrast to 
% chapter highlight color
\newcounter{colorcounternum}
\newcommand{\chpcolortext}{%
  \ifcase\value{colorcounternum}%
    color1\or
    white\or
    white\or
    white\or
    white\or
    color1\else
    white\fi
}

\newcommand{\cyclechpcolor}{%
  \stepcounter{colorcountercirc}%
  \ifnum\value{colorcountercirc}>6\setcounter{colorcountercirc}{0}\fi
  \stepcounter{colorcounternum}%
  \ifnum\value{colorcounternum}>6\setcounter{colorcounternum}{0}\fi
}

\newcommand{\resetchpcolor}{%
  \setcounter{colorcountercirc}{0}
  \setcounter{colorcounternum}{0}
}